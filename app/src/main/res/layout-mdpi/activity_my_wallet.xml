<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myWallet">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWallet"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="#63DBD9D9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="KAZANÇ"
            android:textColor="#162057"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:background="#F5FFFFFF"
            android:elevation="3dp"
            android:padding="6dp"
            android:text="Kullanılabilir Bakiyen"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="100dp"
            android:elevation="5dp"
            android:text="TextView"
            android:textColor="#6DF514"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_below="@+id/cvWallet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Kazancını çekebilmen için minimum 50.0 TL kazanmış olman gerekmektedir."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBank"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#20B3AEAE"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/bank" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="Banka Hesabıma Aktar"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTransactionHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:text="Hesap Haraketleri"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#072174"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>