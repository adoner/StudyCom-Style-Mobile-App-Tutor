<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadToServer">

    <TextView
        android:id="@+id/prgrs_txtvw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prgBar"
        android:layout_marginTop="17dp"
        android:padding="10dp"
        android:text="Cevap Resminiz Yükleniyor..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/prgBar"
        style="@android:style/Widget.Material.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="183dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prgrs_txtvw"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:text="CEVAP BİLGİLERİ"
        android:textColor="#273BB1"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/lectures_spinner"
        android:layout_width="367dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textView29"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:background="#9FCAC8C8"
        android:elevation="5dp"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/upload_edtxt"
        android:layout_width="367dp"
        android:layout_height="249dp"
        android:layout_below="@+id/lectures_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:elevation="2dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Yorum Ekle (İsteğe Bağlı)"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_edtxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="GÖNDER" />
</RelativeLayout>